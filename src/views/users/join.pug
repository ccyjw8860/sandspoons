extends ../root/base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        if username
            input(name="username", type="text", placeholder="username", value=`${username}`, required)
        else 
            input(name="username", type="text", placeholder="username", required)
        if email 
            input(name="email", type="email", placeholder="email", value=`${email}`, required)
        else 
            input(name="email", type="email", placeholder="email", required)
        input(name="password", type="password", placeholder="password", required)
        input(name="password_2", type="password", placeholder="Please type password again", required)
        input(type='submit', value="JOIN")