extends ../root/base.pug
include ../mixins/comments

block content 
    video(src="/"+video.videoUrl, controls)
    div
        p=video.description
        small=video.createdAt 
    div 
        small Uploaded by 
            a(href=`/users/${video.owner._id}`) #{video.owner.username}
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;
    div 
        form(method='POST')
            input(name='context', type='text', placeholder="Write your comment")
            input(type='submit', value="SUBMIT")
    div 
        for comments in video.comments
            +commentVisual(comments)